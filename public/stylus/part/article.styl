.container{
  & article{
    height 1235px
    background #fff
    padding 30px 40px
    & .education,& .personal{
      display inline-block
      width 49%
    }
    & section{
      & h2{
        font-size 21px
        border-bottom 1px dashed #adadad
        font-weight 700
        padding-bottom 4px
        width 98%
        & span{
          font-size: 16px;
          color: teal;
          font-variant: small-caps;
          font-weight: 700;
          margin-left 20px
        }
      }
      & ul{
        padding 5px 10px
        & li{
          display flex
          -webkit-justify-content: space-between;
          -ms-flex-pack: justify;
          justify-content: space-between;
          line-height 24px
        }
      }
      & .item{
        display inline-block
        width 49%
        margin-top 10px
        & h3{
          padding: 3px 10px 3px 26px;
          color: #fff;
          background-color: #333;
          border-radius: 6px;
          font-size: 16px;
          line-height: 1.33;
          font-weight 600
          & span{
            float right
            & a{
              color #333
              border-radius: 6px;
              padding: 1px 10px 1px 24px;
              background-color: #fff;
              font-size: 14px;
              margin-left: 10px;
              text-decoration none
              transition: all .3s ease-out;
              &:hover{
                background-color: rgba(255,255,255,.8);
              }
            }
          }
        }
        & dl{
          padding-left 10px
          border-left: 4px solid #333;
          & dt{
            font-size: 18px;
            font-weight: 700;
            margin: 10px 0 5px;
          }
        }
      }
    }
    & .personal{
      .detail{
        font-size 12px
      }
    }
  }
}