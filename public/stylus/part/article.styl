.container{
  & article{
    height 1235px
    background #fff
    padding 15px 25px 10px 35px
    & strong{
      color #0a730a
      padding 0 3px
    }
    & section{
      margin-bottom 7px
      vertical-align top
      & h2{
        font-size 21px
        font-weight 700
        border-bottom 2px solid #333
        padding-bottom 4px
        width 99%
        & span{
          font-size: 16px;
          color: teal;
          font-variant: small-caps;
          font-weight: 700;
          margin-left 20px
        }
      }
      & ul{
        padding 5px 10px
        & li{
          display flex
          -webkit-justify-content: space-between;
          -ms-flex-pack: justify;
          justify-content: space-between;
          line-height 24px
        }
      }
      & .item{
        display inline-block
        width 49%
        margin-top 10px
        vertical-align: top;
        & h3{
          padding: 3px 10px 3px 10px;
          color: #fff;
          background-color: #333;
          border-radius: 6px;
          font-size: 16px;
          line-height: 1.33;
          font-weight 600
          & span{
            float right
            & a{
              color #333
              border-radius: 6px;
              padding: 1px 10px 1px 5px;
              background-color: #fff;
              font-size: 14px;
              margin-left: 10px;
              text-decoration none
              transition: all .3s ease-out;
              &:hover{
                background-color: rgba(255,255,255,.8);
              }
            }
            & a.none{
              display none
            }
          }
        }
        & dl{
          padding-left 10px
          border-left: 2px solid #333;
          & dt{
            font-size: 18px;
            font-weight: 700;
            margin: 7px 0 4px;
          }
          & dd{
            line-height 1.4
            margin 3px 0
          }
        }
      }
    }
    & .education,& .personal{
      display inline-block
      width 49%
      padding 5px
      border 1px dashed #dadada
    }
    & .personal{
      .detail{
        font-size 12px
      }
    }
  }
}