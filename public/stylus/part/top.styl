.container{
  position relative
}
#top{
  text-align center
  background #666
  color #efefef
  position absolute
  right -100px
  top 30px
  width 80px
  height 80px
  box-sizing border-box
  border-radius 50%
  font-size 16px
  & .h{
    display none
  }
  & h2{
    margin-top 20px
    font-size 22px
    font-weight 700
  }
  & span{
    font-size 20px
  }
}
@media screen and (max-width:1200px){
  #top{
    position relative
    width 100%
    right 0
    top 0
    height auto
    border-radius 0
    background #e0e0e0
    text-align right
    color black
    padding 5px 10px
    font-weight 700
    & .h{
      display inline-block
    }
    & h2{
      display inline-block
      margin 0
    }
  }
}